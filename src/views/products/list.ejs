<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Productos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    .low-stock { background-color: #fff3cd; }
    .no-stock { background-color: #f8d7da; }
    .highlight strong {
      background-color: yellow;
      color: black;
    }
  </style>
</head>
<body>
  <div class="container vintage mt-5">
    <h1 class="mb-4">Inventario de Productos</h1>
    
    <!-- Formulario de filtros unificado -->
    <form method="GET" action="/products" class="row g-3 mb-4">
      <!-- Filtro por categor√≠a -->
      <div class="col-md-3">
        <label class="form-label">Categor√≠a</label>
        <select name="category" class="form-select">
          <option value="">Todas</option>
          <% categories.forEach(cat => { %>
            <option value="<%= cat %>" <%= currentCategory === cat ? 'selected' : '' %>>
              <%= cat %>
            </option>
          <% }) %>
        </select>
      </div>
      
      <!-- Filtro por stock m√≠nimo -->
      <div class="col-md-2">
        <label class="form-label">Stock m√≠nimo</label>
        <input 
          type="number" 
          name="minStock" 
          class="form-control" 
          placeholder="0" 
          min="0"
          value="<%= minStock || '' %>"
        >
      </div>
      
      <!-- Buscador por nombre -->
      <div class="col-md-4">
        <label class="form-label">Buscar por nombre</label>
        <input 
          type="text" 
          name="search" 
          class="form-control" 
          placeholder="Nombre del producto..."
          value="<%= searchQuery || '' %>"
        >
      </div>
      
      <!-- Botones de acci√≥n -->
      <div class="col-md-3 d-flex align-items-end">
        <button type="submit" class="btn btn-primary me-2">üîç Buscar</button>
        <a href="/products" class="btn btn-outline-secondary">Limpiar</a>
      </div>
    </form>

    <a href="/products/new" class="btn btn-outline-dark mb-3">‚ûï Agregar producto</a>
    
    <table class="table table-bordered table-vintage">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Categor√≠a</th>
          <th>Precio</th>
          <th>Stock</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(p => { %>
          <tr class="<%= p.stock <= 0 ? 'no-stock' : (p.stock < 10 ? 'low-stock' : '') %>">
            <td>
              <%= p.name %>
            </td>
            <td><%= p.category %></td>
            <td>$<%= p.price.toFixed(2) %></td>
            <td>
              <%= p.stock %>
              <% if (p.stock <= 0) { %>
                <span class="badge bg-danger ms-2">Agotado</span>
              <% } else if (p.stock < 5) { %>
                <span class="badge bg-warning ms-2">Bajo stock</span>
              <% } %>
            </td>
            <td>
              <a href="/products/edit/<%= p._id %>" class="btn btn-sm btn-warning">‚úèÔ∏è Editar</a>
              <form action="/products/delete/<%= p._id %>" method="POST" style="display:inline;">
                <button class="btn btn-sm btn-danger" onclick="return confirm('¬øEliminar este producto?')">üóëÔ∏è Eliminar</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    
    <% if (products.length === 0) { %>
      <div class="alert alert-warning mt-3">
        No se encontraron productos con los filtros aplicados
      </div>
    <% } %>
    
    <a href="/" class="btn btn-secondary mt-3">‚¨Ö Volver al inicio</a>
  </div>
</body>
</html>