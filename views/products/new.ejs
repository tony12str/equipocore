        <% if (errors && errors.find(e => e.param === 'category')) { %>
          <div class="text-danger mt-1"><%= errors.find(e => e.param === 'category').msg %></div>
        <% } %>
      </div>
      
      <div class="mb-3">
        <label class="form-label">Stock</label>
        <input type="number" name="stock" min="0" value="0" class="form-control">
      </div>
      
      <div class="mb-3">
        <label class="form-label">CÃ³digo de barras</label>
        <input type="text" name="barcode" class="form-control">
      </div>
      
      <div class="mb-3">
        <label class="form-label">DescripciÃ³n</label>
        <textarea name="description" class="form-control" rows="2"></textarea>
      </div>
      
