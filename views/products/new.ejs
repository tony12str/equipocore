<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Nuevo Producto</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container vintage mt-5">
    <h1>Agregar nuevo producto</h1>
   <form action="/products/add" method="POST">

      <div class="mb-3">
        <label class="form-label">Nombre*</label>
        <input type="text" name="name" class="form-control" required>
        <% if (errors && errors.find(e => e.param === 'name')) { %>
          <div class="text-danger mt-1"><%= errors.find(e => e.param === 'name').msg %></div>
        <% } %>
      </div>
      
      <div class="mb-3">
        <label class="form-label">Precio*</label>
        <input type="number" step="0.01" name="price" class="form-control" required>
        <% if (errors && errors.find(e => e.param === 'price')) { %>
          <div class="text-danger mt-1"><%= errors.find(e => e.param === 'price').msg %></div>
        <% } %>
      </div>
      
      <div class="mb-3">
        <label class="form-label">CategorÃ­a*</label>
